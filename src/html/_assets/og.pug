meta(property="og:type" content="website")

if (siteName)
  meta(property="og:title" content=siteName)

if (siteDesc)
  meta(property="og:description" content=siteDesc)

if (siteURL)
  meta(property="og:url" content=siteURL + "/" + pageURL)

if (siteImg)
  meta(property="og:image" content=siteImg)

if (og && og.twitter_id)
  meta(name="twitter:card" content="summary_large_image")
  meta(name="twitter:site" content=`@${og.twitter_id}`)

if (og && og.twitter_creator)
  meta(name="twitter:creator" content=`@${og.twitter_creator}`)

if (siteURL)
  meta(property="twitter:url" content=siteURL + "/" + pageURL)

if (siteName)
  meta(name="twitter:title" content=siteName)

if (siteDesc)
  meta(name="twitter:description" content=siteDesc)

if (siteImg)
  meta(property="twitter:image" content=siteImg)

if (og && og.fb_id)
  if (og.fb_id)
    meta(name="fb:app_id" content=og.fb_id)
  if (og.fb_admins)
    meta(name="fb:admins" content=og.fb_admins)

meta(property="og:locale" content="en_US")

